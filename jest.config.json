{
  "cache": false,
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["**/src/**"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testPathIgnorePatterns": ["/lib/", "/node_modules/"]
}
